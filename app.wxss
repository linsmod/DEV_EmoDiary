/* 全局按钮样式 */
.primary-btn {
  background-color: #07C160;
  color: white;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.2);
  transition: all 0.3s;
}

.primary-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.secondary-btn {
  background-color: #f5f5f5;
  color: #333;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  text-align: center;
  border: 1rpx solid #e5e5e5;
}

.secondary-btn:active {
  background-color: #e5e5e5;
}