/* pages/index/index.wxss */

/* 搜索栏样式 */
.search-bar {
  margin: 20rpx;
  padding: 16rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.search-bar input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  padding-left: 60rpx;
}

.search-icon {
  position: absolute;
  left: 30rpx;
  width: 32rpx;
  height: 32rpx;
}

.container {
  padding: 30rpx 20rpx;
  padding-bottom: 120rpx;
}

/* 新建笔记按钮 */
.add-button {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #3498db;
  color: white;
  padding: 20rpx 0;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(52, 152, 219, 0.3);
}

.add-icon {
  font-size: 40rpx;
  margin-right: 10rpx;
  font-weight: bold;
}

/* 笔记列表 */
.notes-list {
  width: 100%;
}

.note-item {
  background-color: white;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  position: relative;
  border: 1rpx solid transparent;
  box-sizing: border-box;
}

/* 涟漪动画 */
@keyframes ripple {
  from {
    transform: translate(-50%, -50%) scale(0);
    opacity: 1;
  }
  to {
    transform: translate(-50%, -50%) scale(4);
    opacity: 0;
  }
}

.note-selected {
  position: relative;
  background-color: #f0f9ff;
  border: 1rpx solid #3498db;
  overflow: hidden;
}

.note-selected::after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 20rpx;
  height: 20rpx;
  background: rgba(52, 152, 219, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%) scale(0);
  animation: ripple 0.6s ease-out;
  pointer-events: none;
}

.note-check {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.note-check-icon.checked {
  width: 24rpx;
  height: 24rpx;
  background-color: #3498db;
  border-radius: 50%;
  transform: scale(1.2);
  transition: all 0.2s ease;
  box-shadow: 0 2rpx 6rpx rgba(52, 152, 219, 0.5);
}

.note-content {
  padding: 20rpx;
}

.note-title {
  font-size: 34rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  color: #333;
}

.note-preview {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.note-time {
  font-size: 24rpx;
  color: #999;
}

.note-actions {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.delete-btn {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
  font-size: 28rpx;
  color: #e74c3c;
  background-color: #fef9f9;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.action-item {
  font-size: 32rpx;
  color: #333;
}

.action-delete {
  color: #e74c3c;
  font-weight: 500;
}

/* 顶部操作栏 */
.top-action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: white;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.top-action-item {
  font-size: 32rpx;
  color: #333;
  padding: 10rpx 20rpx;
}

.top-action-select {
  color: #3498db;
  font-weight: 500;
}