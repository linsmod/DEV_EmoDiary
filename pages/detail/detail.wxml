<!--pages/detail/detail.wxml-->
<view class="container">
  <!-- 笔记详情 -->
  <view class="note-detail" wx:if="{{!loading && note}}" bindtap="onEdit">
    <!-- 标题 -->
    <view class="note-title">
      {{note.title || '无标题笔记'}}
    </view>
    
    <!-- 更新时间 -->
    <view class="note-time">
      更新于 {{note.updateTimeStr}} · {{note.wordCount || 0}}字
    </view>
    
    <!-- 内容 -->
    <view class="note-content">
      <rich-text nodes="{{note.content || '<p>暂无内容</p>'}}" space="nbsp"></rich-text>
    </view>
  </view>
  
  <!-- 加载状态 -->
  <view class="loading" wx:if="{{loading}}">
    <text>加载中...</text>
  </view>
  
  <!-- 笔记不存在 -->
  <view class="not-found" wx:if="{{!loading && !note}}">
    <text>笔记不存在或已被删除</text>
  </view>
</view>