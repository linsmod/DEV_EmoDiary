/* pages/detail/detail.wxss */
.container {
  padding: 30rpx 20rpx;
}

.note-detail {
  width: 100%;
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
  transition: background-color 0.2s;
}

.note-detail:active {
  background-color: #f9f9f9;
}

.note-detail::after {
  content: "âœŽ";
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  font-size: 32rpx;
  color: #3498db;
  opacity: 0.6;
}

.note-title {
  font-size: 40rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #333;
  word-wrap: break-word;
}

.note-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.note-content {
  font-size: 32rpx;
  line-height: 1.8;
  color: #444;
  margin-bottom: 40rpx;
  word-wrap: break-word;
  white-space: pre-wrap;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
  border-top: 1rpx solid #f0f0f0;
  padding: 30rpx;
  background-color: #fff;
}

.primary-btn {
  background-color: #07C160;
  color: white;
  border-radius: 40rpx;
  padding: 20rpx;
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.secondary-btn {
  background-color: #f5f5f5;
  color: #333;
  border-radius: 40rpx;
  padding: 20rpx;
  font-size: 28rpx;
  text-align: center;
  border: 1rpx solid #e5e5e5;
}

.loading {
  text-align: center;
  padding: 50rpx;
  color: #999;
}

.not-found {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 30rpx;
}