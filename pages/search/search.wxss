.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.search-bar {
  display: flex;
  padding: 20rpx;
  background: #f5f5f5;
  position: sticky;
  top: 0;
  z-index: 100;
  align-items: center;
}

.search-bar input {
  flex: 1;
  background: #fff;
  padding: 24rpx 30rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.search-bar button {
  width: 140rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
}

.result-list {
  flex: 1;
  padding: 20rpx;
}

.result-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

.result-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
  color: #333;
}

.result-preview {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.highlight {
  color: #07C160;
  font-weight: bold;
}

.loading, .no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.empty image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty text {
  color: #999;
  font-size: 28rpx;
}