/* 最近搜索 - 紧凑标签模式 */
.recent-searches {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

.recent-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.recent-title {
  font-size: 26rpx;
  color: #999;
  padding-left: 10rpx;
}

.delete-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.7;
  padding: 8rpx;
}

.delete-btn:active {
  opacity: 1;
  background: rgba(0,0,0,0.05);
  border-radius: 50%;
}

.delete-btn image {
  width: 32rpx;
  height: 32rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.search-tag {
  position: relative;
  background: #f5f5f5;
  padding: 8rpx 15rpx;
  font-size: 26rpx;
  color: #333;
  display:flex;
  min-width:120rpx;
}

.search-tag:active {
  background: #e5e5e5;
}

.tag-delete {
  width: 32rpx;
  height: 32rpx;
  margin-left:10rpx
}

.tag-delete:active {
  opacity: 1;
}

.manage-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.action-btn {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  padding: 16rpx;
  border-radius: 8rpx;
  background: #f5f5f5;
  color: #333;
}

.action-btn.danger {
  background: #fff5f5;
  color: #e74c3c;
  margin-right: 20rpx;
}

.clear-all {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f5f5f5;
  margin-top: 16rpx;
}

.clear-all:active {
  color: #07C160;
}

/* 搜索容器 */
.search-container {
  display: flex;
  padding: 20rpx;
  background: #fff;
  align-items: center;
}

/* 搜索栏样式 */
.search-bar {
  flex: 1;
  min-width: 0; /* 允许缩小 */
  position: relative;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 16rpx 20rpx;
  margin-right: 10rpx; /* 减少与按钮间距 */
}

.search-bar input {
  width: 100%;
  height: 60rpx;
  padding: 0 80rpx 0 60rpx;
  background: transparent;
  font-size: 28rpx;
  color: #333;
}

/* 搜索图标 */
.search-icon {
  position: absolute;
  left: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
}

/* 清空按钮 */
.clear-btn {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 50rpx; /* 增大点击区域 */
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.6;
  background: rgba(0,0,0,0.1);
  border-radius: 50%;
  z-index: 10; /* 确保在最上层 */
}

.clear-btn:active {
  opacity: 1;
  background: rgba(0,0,0,0.2);
}

.clear-btn image {
  width: 24rpx;
  height: 24rpx;
  pointer-events: none; /* 防止图片拦截点击 */
}

/* 调整主按钮宽度 */
.primary-btn.modified {
  width: 140rpx; 
  min-width: 140rpx; /* 防止被压缩 */
  flex-shrink: 0; /* 禁止缩小 */
}

/* 内容区域样式 */
.content-area {
  padding: 0 20rpx;
}

/* 搜索结果样式 */
.result-item {
  padding: 24rpx;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

.result-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.result-preview {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 空状态样式 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

.empty image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.empty text {
  font-size: 28rpx;
  color: #999;
}

/* 页尾提示样式 */
.loading,
.no-more {
  text-align: center;
  padding: 30rpx;
  font-size: 28rpx;
  color: #999;
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

.loading {
  color: #07C160;
}

/* 高亮文本样式 */
.highlight {
  color: #07C160;
  font-weight: bold;
  background-color: rgba(7, 193, 96, 0.2);
  padding: 0 4rpx;
  border-radius: 4rpx;
}

/* 搜索结果分组样式 */
.result-group {
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

.result-group .result-title {
  padding: 24rpx 24rpx 0;
}

.match-count {
  font-size: 26rpx;
  color: #999;
  padding: 0 24rpx 16rpx;
  border-bottom: 1rpx dashed #f5f5f5;
  margin-bottom: 10rpx;
}

.result-group .result-item {
  padding: 16rpx 24rpx;
  margin-bottom: 0;
  box-shadow: none;
  border-radius: 0;
}

.snippet-divider {
  height: 1rpx;
  background: #f5f5f5;
  margin: 0 24rpx;
}

.meta-info {
  display: flex;
  justify-content: space-between;
  margin: 12rpx 24rpx 0;
}

.meta-info text {
  font-size: 24rpx;
  color: #999;
}

.debug-json {
  margin: 10rpx 24rpx;
}

.debug-json text {
  font-size: 20rpx;
  color: #aaa;
  word-break: break-all;
}