/* 最近搜索样式 */
.recent-searches {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

.recent-title {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.recent-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 10rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.recent-item text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.recent-item text:active {
  color: #07C160;
}

.delete-icon {
  width: 32rpx;
  height: 32rpx;
  padding: 10rpx;
}

.clear-all {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 30rpx 0 10rpx;
}

.clear-all:active {
  color: #e74c3c;
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  padding: 20rpx;
  background: #f5f5f5;
  align-items: center;
}

.search-bar input {
  flex: 1;
  background: #fff;
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.search-bar button {
  width: 140rpx;
  flex: none;
  white-space: nowrap;
}

/* 内容区域样式 */
.content-area {
  padding: 0 20rpx;
}

/* 搜索结果样式 */
.result-item {
  padding: 24rpx;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

.result-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.result-preview {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 空状态样式 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.empty text {
  font-size: 28rpx;
  color: #999;
}

/* 高亮文本样式 */
.highlight {
  color: #07C160;
  font-weight: bold;
  background-color: rgba(7, 193, 96, 0.1);
  padding: 0 4rpx;
  border-radius: 4rpx;
}

/* 搜索结果分组样式 */
.result-group {
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

.result-group .result-title {
  padding: 24rpx 24rpx 0;
}

.match-count {
  font-size: 26rpx;
  color: #999;
  padding: 0 24rpx 16rpx;
  border-bottom: 1rpx dashed #f5f5f5;
  margin-bottom: 10rpx;
}

.result-group .result-item {
  padding: 16rpx 24rpx;
  margin-bottom: 0;
  box-shadow: none;
  border-radius: 0;
}

.snippet-divider {
  height: 1rpx;
  background: #f5f5f5;
  margin: 0 24rpx;
}