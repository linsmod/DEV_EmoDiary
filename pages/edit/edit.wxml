<!--pages/edit/edit.wxml-->
<view class="container">
  <view class="note-footer">{{res}}</view>
  <!-- 标题输入和保存按钮 -->
  <view class="header-container">
    <view class="input-group title-group">
      <input class="title-input" placeholder="请输入标题" value="{{title}}" bindinput="onTitleInput" maxlength="100" />
    </view>
    <!-- 保存按钮 -->
    <view class="primary-btn" bindtap="onSave" style="margin-left: 20rpx;">
      保存
    </view>
  </view>
  <view class="note-detail">
    <view class="note-time">
      最后更新 {{updateTimeStr}} · {{wordCount || 0}}字
    </view>
  </view>
  <!-- 内容输入 -->
  <view class="input-group content-group">
    <editor id="editor" 
            class="content-editor" 
            placeholder="请输入内容" 
            show-img-size 
            show-img-toolbar 
            show-img-resize
            adjust-position="{{false}}"
            bindready="onEditorReady"
            bindinput="onContentInput"
            bindstatuschange="onStatusChange">
    </editor>
  </view>

  <!-- 颜色选择器 -->
  <view class="color-picker-panel" wx:if="{{showColorPicker}}">
    <view class="color-item" 
          wx:for="{{colors}}" 
          wx:key="*this" 
          style="background-color: {{item}}"
          bindtap="setBackgroundColor"
          data-color="{{item}}">
    </view>
  </view>
  
  <!-- 富文本工具栏 -->
  <view class="toolbar">
      <!-- 字体大小 (合并为一个按钮) -->
      <view class="toolbar-item" bindtap="toggleFontSize">
        <text class="icon-text" wx:if="{{activeFontSize === 'small'}}">A-</text>
        <text class="icon-text" wx:elif="{{activeFontSize === 'normal'}}">A</text>
        <text class="icon-text" wx:elif="{{activeFontSize === 'large'}}">A+</text>
      </view>
    
      <!-- 加粗 -->
      <view class="toolbar-item {{formats.bold ? 'active' : ''}}" bindtap="format" data-name="bold">
        <text class="icon-text icon-bold">B</text>
      </view>
      <!-- 斜体 -->
      <view class="toolbar-item {{formats.italic ? 'active' : ''}}" bindtap="format" data-name="italic">
        <text class="icon-text icon-italic">I</text>
      </view>
    
      <!-- 对齐方式 (合并为一个按钮) -->
      <view class="toolbar-item" bindtap="toggleAlign">
        <image class="icon-image" wx:if="{{activeAlign === 'left'}}" src="/images/icons/align-left.svg" mode="aspectFit"></image>
        <image class="icon-image" wx:elif="{{activeAlign === 'center'}}" src="/images/icons/align-center.svg" mode="aspectFit"></image>
        <image class="icon-image" wx:elif="{{activeAlign === 'right'}}" src="/images/icons/align-right.svg" mode="aspectFit"></image>
      </view>
    
      <!-- 列表 (合并为一个按钮，支持三种状态) -->
      <view class="toolbar-item {{activeList ? 'active' : ''}}" bindtap="toggleList">
        <image class="icon-image" wx:if="{{activeList === 'ordered'}}" src="/images/icons/list-ordered.svg" mode="aspectFit"></image>
        <image class="icon-image" wx:elif="{{activeList === 'bullet'}}" src="/images/icons/list-bullet.svg" mode="aspectFit"></image>
        <image class="icon-image" wx:else src="/images/icons/list-bullet.svg" mode="aspectFit" style="opacity: 0.4;"></image>
      </view>
    
      <!-- 背景色 -->
      <view class="toolbar-item color-picker" bindtap="showColorPicker">
        <image class="icon-image" src="/images/icons/color.svg" mode="aspectFit"></image>
      </view>
    
      <!-- 撤销 -->
      <view class="toolbar-item" bindtap="undo">
        <image class="icon-image" src="/images/icons/undo.svg" mode="aspectFit"></image>
      </view>
      <!-- 重做 -->
      <view class="toolbar-item" bindtap="redo">
        <image class="icon-image" src="/images/icons/redo.svg" mode="aspectFit"></image>
      </view>
  </view>
</view>