/* pages/edit/edit.wxss */
.container {
  padding: 30rpx 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;

}

.note-detail {
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
  position: relative;
  transition: margin-top 0.5s ease;
}

.note-title {
  font-size: 40rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #333;
  word-wrap: break-word;
  width: 100%;
  padding: 10rpx 0;
}

.note-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.note-content {
  font-size: 32rpx;
  line-height: 1.8;
  color: #444;
  margin-bottom: 40rpx;
  word-wrap: break-word;
  white-space: pre-wrap;
  min-height: 300rpx;
  height: 100%;
  width: 100%;
}

/* 保存按钮 */
.primary-btn {
  background-color: #07C160;
  color: white;
  border-radius: 40rpx;
  padding: 20rpx;
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

/* 工具栏样式 */
.toolbar {
  width: 100%;
  background-color: white;
  /* border-radius: 10rpx 10rpx 0 0; */
  padding: 10rpx 20rpx 25rpx 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.2);
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
}

.toolbar-item {
  width: 90rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* padding: 0 5rpx; */
  margin: 0 8rpx;
  border-radius: 8rpx;
  background-color: #f0f0f0;
}

.icon-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.icon-bold {
  font-weight: 900;
}

.icon-italic {
  font-style: italic;
}

.icon-image {
  width: 32rpx;
  height: 32rpx;
}

/* SVG图标颜色控制 */
.toolbar-item image {
  color: #333;
}

.toolbar-item.active image {
  color: #3498db;
}

.toolbar-item.active .icon-text,
.toolbar-item.active .icon-image {
  color: #3498db;
}

.toolbar-item.active {
  color: #3498db;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
}

/* 颜色选择器面板 */
.color-picker-panel {
  width: 100%;
  background-color: white;
  border-radius: 10rpx;
  border-top: 0.5px solid #ffbefc;
  /* box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2); */
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
  position: fixed;
  bottom: 100rpx;
  left: 0;
  z-index: 110;
}

.color-item {
  width: 60rpx;
  height: 60rpx;
  border-radius: 20%;
  margin: 25rpx 0;
  border: 1rpx solid #bfbfbf;
}

.content-editor {
  flex: 1;
  width: 100%;
  font-size: 30rpx;
  line-height: 1.6;
  box-sizing: border-box;
  min-height: 300rpx;
  height: 100%;
}

.tip-text {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 浮动操作按钮样式 */
.float-buttons {
  position: fixed;
  width: 80rpx;
  background: #fff;
  border-radius: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
  z-index: 999;
}

.drag-handle {
  width: 100%;
  height: 40rpx;
  background: #f0f0f0;
  border-radius: 40rpx 40rpx 0 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.drag-handle::after {
  content: "";
  width: 30rpx;
  height: 4rpx;
  background: #999;
  border-radius: 2rpx;
}

.float-button {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.float-button image {
  width: 40rpx;
  height: 40rpx;
}