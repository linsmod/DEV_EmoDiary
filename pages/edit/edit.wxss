/* pages/edit/edit.wxss */
.container {
  padding: 30rpx 20rpx;
}

.input-group {
  width: 100%;
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.title-input {
  width: 100%;
  font-size: 34rpx;
  font-weight: 500;
  padding: 10rpx 20rpx;
}

/* 工具栏样式 */
.toolbar {
  width: 100%;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 10rpx;
  margin-top: 0rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  position: relative;
  z-index: 10;
}

.toolbar-group {
  display: flex;
  margin: 5rpx 0;
}

.toolbar-item {
  min-width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  padding: 0 0rpx;
  margin: 0 0rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: white;
  color: #333;
}

.toolbar-item.active {
  background-color: #3498db;
  color: white;
}

.color-picker {
  font-size: 24rpx;
  padding: 0 15rpx;
}

/* 颜色选择器面板 */
.color-picker-panel {
  width: 100%;
  background-color: white;
  border-radius: 10rpx;
  padding: 15rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.color-item {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: 10rpx;
  border: 1rpx solid #ddd;
}

.content-group {
  min-height: 500rpx;
}

.content-editor {
  width: 100%;
  min-height: 480rpx;
  height: auto;
  font-size: 30rpx;
  line-height: 1.6;
  padding: 0 20rpx; /* 增加侧边padding */
}

.save-button {
  width: 100%;
  background-color: #3498db;
  color: white;
  text-align: center;
  padding: 25rpx 0;
  border-radius: 10rpx;
  margin: 30rpx 0;
  font-size: 32rpx;
  box-shadow: 0 4rpx 10rpx rgba(52, 152, 219, 0.3);
}

.tip-text {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}