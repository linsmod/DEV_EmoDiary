/* pages/edit/edit.wxss */
.container {
  padding: 30rpx 20rpx;
}

.input-group {
  width: 100%;
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.title-input {
  width: 100%;
  font-size: 34rpx;
  font-weight: 500;
  padding: 10rpx 0;
}

.content-group {
  min-height: 400rpx;
}

.content-input {
  width: 100%;
  font-size: 30rpx;
  line-height: 1.6;
  min-height: 380rpx;
}

.save-button {
  width: 100%;
  background-color: #3498db;
  color: white;
  text-align: center;
  padding: 25rpx 0;
  border-radius: 10rpx;
  margin: 30rpx 0;
  font-size: 32rpx;
  box-shadow: 0 4rpx 10rpx rgba(52, 152, 219, 0.3);
}

.tip-text {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}