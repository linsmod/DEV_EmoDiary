.editor-container {
    position: relative;
    height: 100%;
    width: 100%;
    background-color: #fff;
}

.content-display {
    display: none;
}

#editor {
    border: 1px solid #eee;
    padding: 20rpx;
    min-height: 200px;
    outline: none;
    box-sizing: border-box;
    font-size: 28rpx;
    line-height: 1.6;
    color: #333;
    background-color: #fff;
    width: 100%;
    height: 100%;
    overflow-y: auto;
}

/* 格式化样式 */
#editor b, #editor strong {
    font-weight: bold;
}

#editor i, #editor em {
    font-style: italic;
}

#editor u {
    text-decoration: underline;
}

#editor s, #editor strike, #editor del {
    text-decoration: line-through;
}

#editor img {
    max-width: 100%;
    height: auto;
    margin: 10rpx 0;
    display: block;
}

#editor p {
    margin: 10rpx 0;
    min-height: 1em;
}

#editor ul, #editor ol {
    padding-left: 40rpx;
    margin: 10rpx 0;
}

#editor ul li {
    list-style-type: disc;
}

#editor ol li {
    list-style-type: decimal;
}

#editor blockquote {
    border-left: 4rpx solid #ccc;
    padding-left: 20rpx;
    margin: 10rpx 0;
    color: #666;
}

#editor a {
    color: #07c160;
    text-decoration: underline;
}

#editor div[style*="text-align: center"] {
    text-align: center;
}

#editor div[style*="text-align: right"] {
    text-align: right;
}

#editor div[style*="text-align: justify"] {
    text-align: justify;
}