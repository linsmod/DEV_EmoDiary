.editor-container {
    position: relative;
    height: 100%;
    width: 100%;
    background-color: #fff;
}

.content-display {
    display: none;
}

.editor-content {
    border: 1px solid #eee;
    padding: 20rpx;
    min-height: 200px;
    outline: none;
    box-sizing: border-box;
    font-size: 28rpx;
    line-height: 1.6;
    color: #333;
    background-color: #fff;
    width: 100%;
    height: 100%;
    overflow-y: auto;
}

/* 格式化样式 */
.editor-content .bold-text,
.editor-content .strong-text {
    font-weight: bold;
}

.editor-content .italic-text,
.editor-content .em-text {
    font-style: italic;
}

.editor-content .underline-text {
    text-decoration: underline;
}

.editor-content .strike-text,
.editor-content .del-text {
    text-decoration: line-through;
}

.editor-content .image {
    max-width: 100%;
    height: auto;
    margin: 10rpx 0;
    display: block;
}

.editor-content .paragraph {
    margin: 10rpx 0;
    min-height: 1em;
}

.editor-content .unordered-list,
.editor-content .ordered-list {
    padding-left: 40rpx;
    margin: 10rpx 0;
}

.editor-content .unordered-list .list-item {
    list-style-type: disc;
}

.editor-content .ordered-list .list-item {
    list-style-type: decimal;
}

.editor-content .blockquote {
    border-left: 4rpx solid #ccc;
    padding-left: 20rpx;
    margin: 10rpx 0;
    color: #666;
}

.editor-content .link {
    color: #07c160;
    text-decoration: underline;
}

.editor-content .text-center {
    text-align: center;
}

.editor-content .text-right {
    text-align: right;
}

.editor-content .text-justify {
    text-align: justify;
}